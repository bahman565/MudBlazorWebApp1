@implements IDisposable
@inject NavigationManager NavigationManager
@inject MudBlazorWebApp1.Services.SelectedChildService SelectedChildService

<style>
    body {
        direction: ltr;
        background-color: #ffffff;
        font-family: Vazirmatn
    }
</style>

<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>

    <AuthorizeView>
        <MudNavLink Href="/children" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ChildCare">
            کودکان
        </MudNavLink>

        @if (SelectedChildService.SelectedChildId != null)
        {
            <MudNavLink Href="@($"/children/{SelectedChildService.SelectedChildId}/charts/weight-for-age")"
                        Icon="@Icons.Material.Filled.InsertChart">
                نمودار رشد
            </MudNavLink>
        }
    </AuthorizeView>

    <MudNavLink Href="/about" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Group">درباره ما</MudNavLink>
</MudNavMenu>

@code {
    private string? currentUrl;

    protected override async Task OnInitializedAsync()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
        SelectedChildService.OnChange += SelectedChildChanged;

        // localStorage را براساس userId بخوانید
        await SelectedChildService.InitializeAsync();
        StateHasChanged();
    }

    private void SelectedChildChanged() => StateHasChanged();

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
        SelectedChildService.OnChange -= SelectedChildChanged;
    }
}