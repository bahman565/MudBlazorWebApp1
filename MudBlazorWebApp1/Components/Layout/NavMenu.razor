@inject NavigationManager NavigationManager
@inject NavigationManager Nav
<style>
    body {
        direction: ltr; /* اگر فارسی است */
        background-color: #ffffff;
        font-family: Vazirmatn
    }
</style>

<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>  

    <AuthorizeView>
    <MudNavLink Href="/children" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ChildCare">
        کودکان
    </MudNavLink>
    </AuthorizeView>

    <AuthorizeView>
        <MudNavLink Href="/children" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.InsertChart">
            نمودار رشد
        </MudNavLink>
    </AuthorizeView>

 </MudNavMenu>


@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

